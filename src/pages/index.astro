---
import "../styles/global.css";

import ScrollingContainer from "../components/ScrollingContainer.astro";

import { cardContent } from "../data/card-content.js";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Scrolling Container</title>
  </head>
  <body>
    <main>
      <section>
        <header>
          <h2>Financial Projections</h2>
          <p>
            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
            eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim
            ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut
            aliquip ex ea commodo consequat.
          </p>
        </header>

        <ScrollingContainer cardContent={cardContent} />
      </section>
    </main>
  </body>
</html>

<style>
  main {
    padding-block: 4rem; /* Kun af æstetiske årsager */
    display: grid;
    grid-template-columns:
      [full-start]
      1fr
      [content]
      minmax(0, var(--content-width))
      1fr
      [full-end];
    column-gap: 1rem;
    
    > * {
      grid-column: 2;
    }
    
    section {
      grid-column: 1 / -1;
      display: grid;
      grid-template-columns: inherit;
      row-gap: 3rem;
      
      > * {
        grid-column: 2;
      }
      
      > ul {
        scroll-snap-type: x mandatory;
        grid-column: 1 / -1;
        padding-inline: max(1rem, 50% - var(--content-width) / 2);
        padding-block-end: 1rem;
        
        li {
          scroll-snap-align: center;
        }
      }
    }
  }
  }
  section {
  }
</style>
